@model IEnumerable<SkillsMatrix.Models.QualificationListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Qualification Index</h2>

<p><a class="btn btn-info" value="Add Qualification" onclick=location.href =@Html.ActionLink("Create New", "Create","Qualification")</a></p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.QualificationId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameOfSkill)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YrsOfExperience)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LevelOfSkill)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameOfCertification)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedUtc)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QualificationId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameOfSkill)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YrsOfExperience)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LevelOfSkill)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameOfCertification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedUtc)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.QualificationId }, htmlAttributes: new { @class = "btn btn-info" }) |
                @Html.ActionLink("Details", "Details", new { id = item.QualificationId }, htmlAttributes: new { @class = "btn btn-info" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.QualificationId }, htmlAttributes: new { @class = "btn btn-info" })
            </td>
        </tr>
    }

</table>
